                            content: "combobox.html"
                        }).data('kendoWindow').center();
                    }
                },
                openTab: function() {
                    var tab = $("#tabstrip").data("kendoTabStrip");
                    tab.append({
                        tabid: 'Item-' + (++tabCounter),
                        text: 'Item ' + (++tabCounter) + ' <span class="k-icon k-i-close"></span>',
                        encoded: false,
                        content: '<p>Appended item " '+ tabCounter +' " content</p>'
