                data: {
                    //userName:'Admin',
                    userId: 3,
                    flozen:'Y',
                    //id:101,
                    name:'功能管理'
                },
                validateForm: function() {
                    //validator.validate();
                    this.data.set('userId', null)
                        //this.set('data',{})
                },
                comboboxSource: [{
                    text: "Cotton",
                    value: "1"
                }, {
                    text: "Polyester",
                    value: "2"
                }, {
                    text: "Cotton/Polyester",
                    value: "3"
                }, {
                    text: "Rib Knit",
                    value: "4"
                }],
                showInfo: function() {
                    kendo.ui.showInfoDialog({
                        message: '您的订单已经提交!'
                    }).done(function(e) {
                        centered.show('你点击了 ' + e.button)
                    })
                },
                showError: function() {
                    kendo.ui.showErrorDialog({
                        message: '错误信息!'
                    }).done(function(e) {
                        centered.show('你点击了 ' + e.button)
                    })
                },
                showWarning: function() {
                    kendo.ui.showWarningDialog({
                        message: '警告信息!'
                    }).done(function(e) {
                        centered.show('你点击了 ' + e.button)
                    })
                },
                showConfirm: function() {
                    kendo.ui.showConfirmDialog({
                        title: '提示',
                        message: '确认删除么?'
                    }).done(function(e) {
                        centered.show('你点击了 ' + e.button)
                    })
                },
                showCustom: function() {
                    kendo.ui.showDialog({
                        title: '自定义窗口',
                        width: 400,
                        message: $('#modal-body').html(),
                        buttons: [{
                            text: "按钮1",
                            type: 'primary',
                            click: function(e) {
                                e.dialog.destroy();
                                e.deferred.resolve({
                                    button: "BUTTON1"
                                });
                            }
                        }, {
                            text: "按钮2",
                            type: 'success',
                            click: function(e) {
                                e.dialog.destroy();
                                e.deferred.resolve({
                                    button: "BUTTON2"
                                });
                            }
                        }, {
                            text: "按钮3",
                            type: 'danger',
                            click: function(e) {
                                e.dialog.destroy();
                                e.deferred.resolve({
                                    button: "BUTTON2"
                                });
